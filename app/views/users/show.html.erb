<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
    <%= link_to '新規予約する', schedules_path, class: 'btn btn-lg btn-primary' %>
 
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item">あなたが予約している会議室</li>
    </ul>
  
     <table clas='table'>
      <thead>
        <tr><th>日付</th><th>区分</th><th>会議室</th><th>タイトル</th><tH>取り消し</th></tr>
      </thead>
      <% schedules = Schedule.where(status: 1).where(user: current_user) %>
      <% schedules.each do |schedule| %>
      <tbody>
        <tr>
          <td><%= schedule.date %></td>
          <td><%= schedule.segment %></td>
          <td><%= schedule.room.name %></td>
          <td><%= schedule.title %></td>
          <td>
            <% if schedule.status == 1 %>
              <%= link_to '予約を取り消す', cancel_schedule_path(schedule), method: :put %>
            <% end %>
          </td>
         </tr>
      <% end %>
        
      </tbody>
    </table>
    
  </div>

</div>

    
      